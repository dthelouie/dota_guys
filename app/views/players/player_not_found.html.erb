<h2>Player not found, please try again</h2>

<div>
  <div class="card grey lighten-3 z-depth-2">
    <div class="card-content">
      <%= form_tag player_path(id: 0), method: 'get' do %>
        <div class="input-field">
          <%= text_field_tag :player_id, params[:player_id], class: "validate" %>
          <%= label_tag :player_id, "Enter Steam ID here" %>
        </div>
        <button class="btn waves-effect waves-light"><%= submit_tag "Search"%></button>
      <% end %>
      </div>
    </div>
</div>
