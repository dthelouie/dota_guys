<!DOCTYPE html>
<html>
<head>
  <title>DotaGuys</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
  <body class="grey lighten-2">
    <nav class="navbar navbar-inverse blue-grey darken-3">
      <div class="container">
        <div id="navbar">
          <% if current_user %>
          <ul class="nav navbar-nav right">
            <li><%= link_to image_tag(current_user.avatar_url, alt: current_user.nickname), root_path %></li>
            <li><%= link_to 'Log Out', logout_path, method: :delete, class: "btn waves-effect waves-light" %></li>
          </ul>
          <% else %>
          <ul class="nav navbar-nav right">
            <li><%= link_to 'Log In via Steam', '/auth/steam', class: "btn waves-effect waves-light" %></li>
          </ul>
          <% end %>
        </div>
        <div class="navbar-header">
          <h1><%= link_to 'DotaGuys', root_path, class: 'navbar-brand' %></h1>
        </div>
      </div>
    </nav>

    <div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>

  </body>
</html>
