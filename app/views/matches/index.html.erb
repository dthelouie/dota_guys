

<% if @matches && @matches.any? %>
<h3>Your Recent Matches:</h3>
  <table class="table striped highlight bordered">
    <% @matches.each do |match| %>
    <tr class="row">
      <td>
        <%= render 'player_hero', hero: current_user.played_for_in(match) %>
        <%= link_to match.formatted, match_path(match), class: "match-link" %>
        <% if current_user.won?(match)%>
          <span class="label radiant">won</span>
        <% else %>
          <span class="label dire">lost</span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
<% end %>
